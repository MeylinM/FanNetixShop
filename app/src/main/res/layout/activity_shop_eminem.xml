<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity">

    <ImageView
        android:id="@+id/encabezado"
        android:layout_width="410dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/encabezado_eminem" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/encabezado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Camiseta Section -->
            <ImageView
                android:id="@+id/ivCamiseta"
                android:layout_width="match_parent"
                android:layout_height="211dp"
                app:srcCompat="@drawable/sudadera_eminem" />

            <TextView
                android:id="@+id/tvDescripCamiseta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="@string/hoodieEminem"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnBuyCamiseta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/btnBuy"
                    android:textSize="20sp"
                    android:layout_marginStart="50dp" />

                <TextView
                    android:id="@+id/tvPrecioCami"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/tvPriceHoddieEminem"
                    android:textSize="24sp" />
            </LinearLayout>
            <!-- Agregar margen inferior entre productos -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" /> <!-- Espacio adicional -->
            <!-- Funkos Section -->
            <ImageView
                android:id="@+id/iviBracelet"
                android:layout_width="match_parent"
                android:layout_height="211dp"
                app:srcCompat="@drawable/funda_eminem" />

            <TextView
                android:id="@+id/tvBracelet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="@string/iphoneCaseEminem"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnBuyBracelet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/btnBuy"
                    android:textSize="20sp"
                    android:layout_marginStart="50dp" />

                <TextView
                    android:id="@+id/tvPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/tvPrice"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!-- BotÃ³n en la parte inferior -->
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#000000"
        android:text="@string/btnUpload"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
